<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Semi-transparent blue background -->
    <solid android:color="#edebe4" />

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Optional padding inside background -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="6dp"
        android:bottom="6dp"/>
</shape>
