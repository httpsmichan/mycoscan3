<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Fill color (light gray placeholder) -->
    <solid android:color="#E0E0E0" />

    <!-- Optional border -->
    <stroke
        android:width="2dp"
        android:color="#AAAAAA" />

    <!-- Size (only needed if used standalone,
         not if applied as background to an ImageView) -->
    <size
        android:width="100dp"
        android:height="100dp" />
</shape>
