<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFF99" />

    <!-- Dashed border -->
    <stroke
        android:width="2dp"
        android:color="#FFD700"
    android:dashWidth="10dp"
    android:dashGap="5dp" />

    <!-- Optional corner radius -->
    <corners android:radius="8dp" />
</shape>
