<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/BG">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@android:color/white"
        app:cardCornerRadius="0dp"
        app:strokeWidth="1dp"
        android:elevation="1dp">

        <TextView
            android:id="@+id/postsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts for Verification"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_gravity="center"/>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/searchFilterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <!-- Search -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search by username"
            android:textSize="12sp"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_image_borders"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:inputType="text"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/filterRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="end|center_vertical"
    android:layout_marginStart="10dp">

    <ImageView
        android:id="@+id/spinnerIcon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_filter"
        android:layout_marginEnd="6dp"/>

    <TextView
        android:id="@+id/spinnerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:text="All"/>
</LinearLayout>

    <!-- Tabs for switching -->
    <LinearLayout
        android:id="@+id/tabContainer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:clipToOutline="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_pill_bg"
        android:padding="2dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tabQueue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Verification Queue"
            android:textStyle="bold"
            android:background="@drawable/selected"
            android:textColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/tabHistory"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Review History"
            android:textStyle="bold"
            android:background="@drawable/not_selected"
            android:textColor="#047857"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tvNoPosts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✉️ No posts pending verification"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:textStyle="italic"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPosts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"/>

</LinearLayout>
