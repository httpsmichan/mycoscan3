<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/BG"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:dividerHeight="16dp">

        <!-- Header row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginBottom="10dp">

            <!-- Back clickable text -->
            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="13sp"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <!-- Centered header -->
            <TextView
                android:id="@+id/postsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


        <!-- Change Password Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="3dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/white"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_margin="4dp"
            android:background="@drawable/dialog_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="12dp"
                android:layout_marginBottom="10dp"
                card_view:cardBackgroundColor="@android:color/white">

                <EditText
                    android:id="@+id/etCurrentPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="10dp"
                    android:hint="Current Password"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:inputType="textCapSentences"
                    android:textSize="12sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="12dp"
                android:layout_marginBottom="10dp"
                card_view:cardBackgroundColor="@android:color/white">

                <EditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="10dp"
                    android:hint="New Password"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:inputType="textCapSentences"
                    android:textSize="12sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="12dp"
                android:layout_marginBottom="10dp"
                card_view:cardBackgroundColor="@android:color/white">

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="10dp"
                    android:hint="Confirm New Password"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:inputType="textCapSentences"
                    android:textSize="12sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:background="@drawable/bg_button"
                android:text="Update Password"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>


        <!-- Login Activity & Devices Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="3dp"
            android:padding="16dp"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dialog_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login Activity &amp; Devices"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Review the devices currently logged into your account."
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/containerDevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="(Device list feature coming soon)"
                    android:textColor="#777"/>
            </LinearLayout>

            <TextView
                android:id="@+id/btnLogoutAllDevices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_fullmap_bg"
                android:gravity="center"
                android:elevation="2dp"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:text="Log Out of All Other Devices"/>
        </LinearLayout>

        <!-- Account Management Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="3dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/dialog_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Management"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can temporarily deactivate or permanently delete your account."
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnDeactivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_fullmap_bg"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:textSize="12sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:text="Deactivate Account"/>

                <TextView
                    android:id="@+id/btnDeleteAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_fullmap_bg"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:textSize="12sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/red"
                    android:text="Delete Account"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note: Deactivation is temporary and reversible. Deleting is permanent and cannot be undone."
                android:textSize="12sp"
                android:textColor="#666"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
