<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewHarvest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/BG">

    <LinearLayout
        android:id="@+id/linearLayoutHarvestContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="30dp"
            android:layout_marginBottom="20dp"
            android:elevation="5dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/harvestingTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proper Mushroom Harvesting Tips"
                android:textSize="26sp"
                android:textColor="#4b8b3b"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Tools of the Trade -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f9fff9"
            android:padding="20dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tools of the Trade:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• A Small Knife: Use a sharp knife to cut the stem cleanly."
                android:textSize="16sp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Basket or Mesh Bag: Allows air circulation and helps spread spores."
                android:textSize="16sp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Brush: Gently clean dirt and debris from mushrooms."
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Harvesting Techniques -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f9fff9"
            android:padding="20dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harvesting Techniques:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Don't Pull, Cut: Cut the stem at its base to protect the mycelium."
                android:textSize="16sp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Leave Some Behind: Allow mushrooms to mature and release spores."
                android:textSize="16sp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Harvest a Full Specimen: If unsure, dig up the mushroom to check features."
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Post-Harvest Practices -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f9fff9"
            android:padding="20dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post-Harvest Practices:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Clean on-site: Brush away dirt while still in the field."
                android:textSize="16sp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Note the Habitat: Observe surrounding trees, plants, and growing medium."
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Warning -->
        <TextView
            android:id="@+id/harvestingWarningTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REMEMBER: Positive identification must always happen before harvesting. If you are not 100% certain, do not harvest or consume the mushroom."
            android:textSize="16sp"
            android:textColor="#856404"
            android:background="#fff3cd"
            android:padding="20dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>
