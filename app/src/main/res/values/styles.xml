<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomReportDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <!-- Background -->
        <item name="android:background">@drawable/dialog_background</item>

        <!-- Remove full-screen stretch -->
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>

        <!-- Animation (optional) -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- Optional animation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ShapeAppearance.FAB.Rectangle" parent="">
        <item name="cornerFamily">cut</item> <!-- or rounded -->
        <item name="cornerSize">0dp</item>   <!-- sharp edges -->
    </style>


</resources>